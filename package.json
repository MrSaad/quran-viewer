{
  "name": "quran-viewer",
  "version": "1.0.0",
  "description": "Quran Viewer",
  "main": "server.js",
  "scripts": {
    "build:js": "esbuild src/assets/js/app.js --bundle --minify --outfile=dist/js/app.min.js",
    "build:css": "postcss src/assets/css/styles.css -o dist/css/styles.min.css",
    "build": "npm run build:js && npm run build:css",
    "dev": "nodemon --watch src --watch server.js --ext js,css,html --exec \"npm run build && node server.js\"",
    "start": "node server.js"
  },
  "dependencies": {
    "@fastify/static": "^8.0.0",
    "fastify": "^5.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.0",
    "esbuild": "^0.24.0",
    "nodemon": "^3.1.0",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.0"
  }
}
